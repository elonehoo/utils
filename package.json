{
  "name": "@elonehoo/utils",
  "type": "module",
  "version": "0.0.2",
  "description": "Collection of common JavaScript / TypeScript utils",
  "author": "Elone Hoo <hi@elonehoo.me>",
  "license": "MIT",
  "homepage": "https://github.com/elonehoo/utils#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/elonehoo/utils.git"
  },
  "bugs": {
    "url": "https://github.com/elonehoo/utils/issues"
  },
  "keywords": [
    "utils"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "*.d.ts"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "pnpm -C test run test",
    "test:ui": "pnpm -C test run ui",
    "test:coverage": "pnpm -C test run coverage",
    "typecheck": "tsc --noEmit",
    "release": "bumpp package.json --commit --push --tag && pnpm -r publish --access public",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "dependencies": {
    "p-limit": "^4.0.0",
    "throttle-debounce": "^5.0.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.37.0",
    "@types/node": "^18.15.10",
    "@types/throttle-debounce": "^5.0.0",
    "bumpp": "^9.1.0",
    "eslint": "^8.36.0",
    "tsup": "^6.7.0",
    "typescript": "^4.9.5"
  }
}
